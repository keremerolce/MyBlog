@model MvcBlog.Models.Makale

@{
    ViewBag.Title = "MakaleDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .tag{
        background-color:beige;
    }
</style>
<!-- Title -->
<h1 class="mt-4">@Model.Baslik</h1>
<!-- Author -->
<p class="lead">
    
    <img class="img-circle" src="@Model.Uye.Foto" width="50" />        <a href="/Uye/Index/@Model.Uye.UyeId">@Model.Uye.AdSoyad</a>
</p>
<hr>
<!-- Date/Time -->
<p><span class="glyphicon glyphicon-time"></span>@String.Format("{0:MMM yyyy}",Model.Tarih) | <span class="glyphicon glyphicon-time"></span> @Model.Kategori.KategoriAdi (@Model.Kategori.Makales.Count()) | <span class="glyphicon glyphicon-send"></span>@Model.Yorums.Count()</p>
<hr>
<!-- Preview Image -->
<img class="img-fluid rounded" src="@Model.Foto" alt="@Model.Baslik">
<hr>
<!-- Post Content -->
<p class="lead">@Model.Icerik</p>
<div>
    @foreach (var item in Model.Etikets)
    {
        <span class="tag">@item.EtiketAdi</span>
    }
</div>








